{
  "name": "btfmt-lsp",
  "displayName": "btfmt LSP",
  "description": "bpftrace formatter LSP client for VS Code",
  "version": "0.0.2",
  "publisher": "local",
  "repository": {
    "url": "https://github.com/fanyang89/bpftrace-formatter.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:bpftrace",
    "onCommand:btfmt.restartLsp"
  ],
  "contributes": {
    "commands": [
      {
        "command": "btfmt.restartLsp",
        "title": "Restart LSP",
        "category": "btfmt"
      }
    ],
    "grammars": [
      {
        "language": "bpftrace",
        "scopeName": "source.bpftrace",
        "path": "./syntaxes/bpftrace.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "bpftrace",
        "aliases": [
          "bpftrace"
        ],
        "extensions": [
          ".bt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "btfmt",
      "properties": {
        "btfmt.serverPath": {
          "type": "string",
          "default": "btfmt",
          "description": "Path to the btfmt executable. Defaults to 'btfmt' in PATH."
        },
        "btfmt.configPath": {
          "type": "string",
          "default": "",
          "description": "Path to .btfmt.json. Can be absolute or workspace-relative."
        }
      }
    }
  },
  "scripts": {
    "compile": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "watch": "npm run compile -- --watch",
    "vscode:prepublish": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.3",
    "typescript": "^5.4.5"
  }
}
